extend ./layout/default

block title
    title #{title}
block header
    header
        h1 #{title}

block main-content
    form(ng-controller="loginController")
        label 用户名或邮箱
        input(type="text" ng-model="account")
        br
        label 登陆密码
        input(type="password" ng-model="password")
        br
        input(type="submit" ng-click="userLogin()")

extend ./layout/default
block link
block title
    title #{title}

block main-content
    h1=postTitle
    p.articleinfo
        | 作者:
        a(href="" style="color:#111;") #{username}
        |  |
        | 日期:
        | #{time}

    div#articleContent
        | #{postContent}


block script
    script(src="http://cdn.bootcss.com/markdown.js/0.5.0/markdown.min.js")
    script.
        var a = document.getElementById("articleContent").innerHTML;
        document.getElementById("articleContent").innerHTML = markdown.toHTML(a);